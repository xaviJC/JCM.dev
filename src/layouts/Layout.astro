---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portfolio personal y CV" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 dark:bg-dark dark:text-gray-100">
    <slot />
  </body>
</html> 